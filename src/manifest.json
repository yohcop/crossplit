{
  "manifest_version": 2,

  "name": "Window Manager for Chrome OS",
  "short_name": "ChromeOS-WM",
  "description": "Window Manager for Chrome OS",
  "version": "0.1",

  "permissions": ["tabs", "storage", "system.display"],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "commands": {
    "001-next-layout-for-screen": {
      "description": "Next layout for the current screen"
    },
    "900-swap-primary": {
      "description": "Swap current window with primary window (Suggested Alt+Shift+Return)"
    },
    "999-relayout": { "description": "Relayout (Suggest Alt+Shift+Z)" }
  }
}
